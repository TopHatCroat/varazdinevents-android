<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="0dp">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorHostProfileGeneral"
            android:id="@+id/background_layout"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/host_profile_general_title"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#80ffffff"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/awesome"
                    android:text="@string/fa_clock"
                    android:id="@+id/awesome_clock" />

                <TextView
                android:text="0-24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/host_profile_time"
                style="@style/dark_grey_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/awesome"
                    android:text="@string/fa_home"
                    android:id="@+id/awesome_home"/>

                <TextView
                    android:text="Julija MerliÄ‡a 9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/host_profile_address"
                    style="@style/dark_grey_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/awesome"
                    android:text="@string/fa_facebook"
                    android:id="@+id/awesome_facebook" />


                <TextView
                    android:text="https://www.facebook.com/studentskizivotvarazdina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/host_profile_facebook"
                    style="@style/dark_grey_text"/>


            </LinearLayout>
            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#80D9534F"
                 android:layout_marginRight="22dp"
                 android:layout_marginLeft="22dp" /> -->


            <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#80D9534F"
             android:layout_marginRight="22dp"
             android:layout_marginLeft="22dp" /> -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/awesome"
                    android:text="@string/fa_calendar"
                    android:id="@+id/awesome_calendar"/>

                <TextView
                    android:text="http://varazdinevents.cf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/host_profile_web"
                    style="@style/dark_grey_text"/>

            </LinearLayout>
            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#80D9534F"
                 android:layout_marginRight="22dp"
                 android:layout_marginLeft="22dp" /> -->

            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#80D9534F"
                 android:layout_marginRight="22dp"
                 android:layout_marginLeft="22dp" /> -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="25dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/awesome"
                    android:text="@string/fa_host"
                    android:id="@+id/awesome_host" />

                <TextView
                    android:text="0999999999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/host_profile_phone"
                    style="@style/dark_grey_text"/>

            </LinearLayout>
            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#80D9534F"
                 android:layout_marginRight="22dp"
                 android:layout_marginLeft="22dp" /> -->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
