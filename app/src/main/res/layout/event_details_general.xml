<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/elevation_amount"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/layout_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/background_layout"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/event_details_general_title"
            style="@style/event_card_title"
            android:layout_marginTop="15dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_title"
                android:id="@+id/awesome_title"
                />
            <TextView
                android:text="@string/event_general_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_title"
                android:layout_marginBottom="3dp"
                style="@style/dark_grey_text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_calendar"
                android:id="@+id/awesome_calendar"
                />

            <TextView
                android:text="@string/event_general_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_date"
                style="@style/dark_grey_text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_clock"
                android:id="@+id/awesome_clock" />
            <TextView
                android:text="@string/event_general_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_time"
                style="@style/dark_grey_text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_host"
                android:id="@+id/awesome_host" />

            <TextView
                android:text="@string/event_general_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_host"
                style="@style/red_text_link"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_facebook"
                android:id="@+id/awesome_facebook" />

            <TextView
                android:text="@string/event_general_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="@string/show_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_facebook"
                style="@style/dark_grey_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="25dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/awesome"
                android:text="@string/fa_rocket"
                android:id="@+id/awesome_rocket" />

            <TextView
                android:text="@string/event_general_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                style="@style/dark_grey_text"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_category"
                style="@style/dark_grey_text"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

