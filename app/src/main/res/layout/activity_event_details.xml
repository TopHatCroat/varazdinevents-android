<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/coordinator_layout"
        tools:context=".places.events.MainActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"/>
            <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->


        </android.support.design.widget.AppBarLayout>

        <android.widget.RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/details_content_holder">

            <ImageView
                android:padding="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/event_details_image"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_title"/>

            <android.support.design.widget.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_dialog_email"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_date"
                android:layout_below="@+id/event_details_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/event_details_dateTo"
                android:layout_alignEnd="@+id/event_details_dateTo" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp"
                android:id="@+id/event_details_dateTo"
                android:layout_alignRight="@+id/event_details_title"
                android:layout_alignEnd="@+id/event_details_title" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_dateTo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_host"
                android:layout_alignRight="@+id/event_details_dateTo"
                android:layout_alignEnd="@+id/event_details_dateTo" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_host"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_category"
                android:layout_alignRight="@+id/event_details_host"
                android:layout_alignEnd="@+id/event_details_host" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_category"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_offers"
                android:layout_alignRight="@+id/event_details_category"
                android:layout_alignEnd="@+id/event_details_category" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_offers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_facebook"
                android:layout_alignRight="@+id/event_details_offers"
                android:layout_alignEnd="@+id/event_details_offers" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_facebook"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_officialLink"
                android:layout_alignRight="@+id/event_details_facebook"
                android:layout_alignEnd="@+id/event_details_facebook" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_details_officialLink"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/event_details_text"
                android:layout_alignRight="@+id/event_details_officialLink"
                android:layout_alignEnd="@+id/event_details_officialLink" />

        </android.widget.RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>
