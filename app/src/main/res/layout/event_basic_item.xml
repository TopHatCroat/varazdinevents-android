<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.RelativeLayout
        android:layout_height="78dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/basic_item_picture"
            android:layout_alignParentTop="true"/>


        <TextView
            android:text="basic_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_title"
            android:layout_below="@+id/basic_item_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="basic_item_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_host"
            android:layout_below="@+id/basic_item_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="basic_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_time"
            android:layout_below="@+id/basic_item_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="basic_item_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_date"
            android:layout_below="@+id/basic_item_host"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </android.widget.RelativeLayout>


</android.support.v7.widget.CardView>