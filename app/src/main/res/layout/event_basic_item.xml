<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.RelativeLayout
        android:layout_height="153dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:id="@+id/basic_item_picture"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_host"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="left"

            android:text="CallerBlocker"
            android:textSize="12dp"
            android:fontFamily="Arial"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_date"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/basic_item_host"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"

            android:text="CallerBlocker"
            android:textSize="12dp"
            android:fontFamily="Arial"
            android:textStyle="bold"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_title"
            android:layout_above="@+id/basic_item_host"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:text="CallerBlocker"
            android:textSize="15dp"
            android:fontFamily="Arial"
            android:textStyle="bold"/>

    </android.widget.RelativeLayout>


</android.support.v7.widget.CardView>