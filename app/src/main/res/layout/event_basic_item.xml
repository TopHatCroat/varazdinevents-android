<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.RelativeLayout
        android:layout_height="153dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_card_size"
            android:id="@+id/basic_item_picture"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/basic_item_title"
                    style="@style/card_title_style"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/basic_item_host"
                    style="@style/card_subtitle_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_weight="1">


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/basic_item_datetime"
                    style="@style/card_subtitle_style"/>

            </LinearLayout>

        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:visibility="visible"
            android:id="@+id/fab_basic_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_favorite_border_red_400_24dp"
            android:layout_above="@+id/basic_item_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </android.widget.RelativeLayout>


</android.support.v7.widget.CardView>