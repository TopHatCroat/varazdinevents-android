<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/no_image_item_card_height"
    android:layout_alignParentBottom="true"
    app:cardElevation="@dimen/elevation_amount"
    android:layout_marginLeft="@dimen/layout_margin"
    android:layout_marginRight="@dimen/layout_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_image_item_card_height"
        android:paddingTop="@dimen/layout_padding"
        android:paddingBottom="@dimen/vertical_card_layout_padding"
        android:paddingEnd="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:paddingStart="@dimen/layout_padding"
        android:paddingLeft="@dimen/layout_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/basic_item_title"
            style="@style/card_title_style" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basic_item_datetime"
            style="@style/card_subtitle_style"

            android:layout_gravity="bottom|end"
            android:textAlignment="viewEnd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/basic_item_host"
            style="@style/card_subtitle_style"
            android:layout_gravity="bottom|end"
            android:textAlignment="viewEnd"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>