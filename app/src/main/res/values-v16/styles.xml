<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#5a86bd</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="AppTheme.MediumFont14">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont16">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont14">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.RegularFont18">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
    </style>
</resources>