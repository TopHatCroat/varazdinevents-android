<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="new_event_input">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="new_event_input_datetime" parent="Widget.AppCompat.EditText">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="new_event_spinner_input">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="large_white_title">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="red_text_link">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dark_grey_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="awesome">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="new_event_title_style">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="card_title_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="card_subtitle_style">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
    </style>

    <style name="event_card_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="AppTheme.RegularFont18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont18.Inverse" parent="AppTheme.RegularFont18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.RegularFont18.Title" parent="AppTheme.RegularFont18">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.RegularFont18.DialogTitle" parent="AppTheme.RegularFont18">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.RegularFont14.Strong" parent="AppTheme.RegularFont14">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.RegularFont14.Smaller" parent="AppTheme.RegularFont14">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.MediumFont14">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.MediumFont14.Inverse" parent="AppTheme.MediumFont14">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.MediumFont14.Accent" parent="AppTheme.MediumFont14">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#1a000000</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="AppTheme.MainLogo">
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="AppTheme.Button">
        <item name="android:background">@drawable/important_button</item>
    </style>

    <style name="AppTheme.Button.Light" parent="AppTheme.Button">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>